<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_login_phonenumber_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingBottom="8dp"
        android:paddingTop="12dp"
        android:textColorHint="@color/color_FF999999"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_login_sms_code_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="12dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/color_FF999999"
            android:textSize="@dimen/text_size_14sp" />

        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/tv_login_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/btn_get_sms_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:text="获取验证码"
            android:textColor="@color/enable_color_selector"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:background="@color/divider" />
    <android.support.v4.widget.Space
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.dingzhu.junkd.mvp.ui.widget.XTextView
        android:id="@+id/tv_login_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"

        android:background="@drawable/btn_common_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/jun_btn_text_color_selector"
        android:textSize="16sp" />
    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="0dp" />
</LinearLayout>