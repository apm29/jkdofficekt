<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.dingzhu.junkd.mvp.ui.widget.XTextView
        android:id="@+id/tv_about_junkd"
        style="@style/Item.Setting"
        android:layout_marginTop="5dp"
        android:text="关于我们"
        android:textSize="@dimen/text_size_14sp"/>

    <View
        style="@style/Divider"
        android:layout_marginLeft="@dimen/layout_margin_20dp"/>


    <LinearLayout
        android:id="@+id/setting_update_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_white">

        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            style="@style/Item.Setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@null"
            android:text="版本号"
            android:textSize="@dimen/text_size_14sp"/>

        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/setting_version"
            style="@style/Item.Setting"
            android:layout_width="wrap_content"
            android:background="@null"
            android:drawableRight="@null"
            android:text="v1.0.0"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginLeft="@dimen/layout_margin_20dp"/>


    <com.dingzhu.junkd.mvp.ui.widget.XTextView
        android:id="@+id/setting_exit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_common_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"/>

</LinearLayout>
