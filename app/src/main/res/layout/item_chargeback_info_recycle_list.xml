<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:paddingBottom="16dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/tv_name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="(手续费扣款)丁博566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        style="@style/Divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_type" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:text="调整>>"
        android:textColor="@color/junkd_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amount_chargeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="200.0"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_chargeback"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:text="扣款金额"
        app:layout_constraintEnd_toEndOf="@+id/tv_amount_chargeback"
        app:layout_constraintStart_toStartOf="@+id/tv_amount_chargeback"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount_chargeback"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_time_chargeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2017-12-15"
        app:layout_constraintEnd_toStartOf="@+id/tv_status_chargeback"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/tv_amount_chargeback"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="扣款时间"
        app:layout_constraintEnd_toEndOf="@+id/tv_time_chargeback"
        app:layout_constraintStart_toStartOf="@+id/tv_time_chargeback"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_chargeback"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_status_chargeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="扣款成功"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/tv_time_chargeback"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="扣款状态"
        app:layout_constraintEnd_toEndOf="@+id/tv_status_chargeback"
        app:layout_constraintStart_toStartOf="@+id/tv_status_chargeback"
        app:layout_constraintTop_toBottomOf="@+id/tv_status_chargeback"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>