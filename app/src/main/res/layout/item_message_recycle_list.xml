<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginTop="5dp"
        android:text="2017-12-21 09:10:13"
        android:textSize="@dimen/text_size_12sp" />


    <TextView
        android:id="@+id/tv_item_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:text="您的终审资格已通过审核，我们将会把贷款金额xx元打入您的账户，请注意查看账户余额！"
        android:textSize="@dimen/text_size_14sp" />

</LinearLayout>