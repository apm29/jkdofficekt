<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:layout_marginBottom="15dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/interest_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:text="先息后本"
        android:textColor="@color/text_color_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_number"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/project_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="2018/09/10期"
        android:textColor="@color/text_hint_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="4000.0"
        android:textSize="15sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_color_dark"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/loan_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6个月"
        android:textColor="@color/text_hint_dark"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tip_loan_term"
        app:layout_constraintStart_toEndOf="@+id/tip_loan_term"/>

    <TextView
        android:id="@+id/tip_loan_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="借款期限"
        android:textColor="@color/text_hint_dark"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <TextView
        android:id="@+id/chargeback_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.3%"
        android:textColor="@color/text_hint_dark"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tip_loan_interest"
        app:layout_constraintStart_toEndOf="@+id/tip_loan_interest" />

    <TextView
        android:id="@+id/tip_loan_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",借款利率"
        android:textColor="@color/text_hint_dark"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/loan_term"
        app:layout_constraintStart_toEndOf="@+id/loan_term" />

    <View
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:background="@color/separator2"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/interest_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp" />
</android.support.constraint.ConstraintLayout>