<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@color/color_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:paddingTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_top_banner_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"

                android:gravity="center"
                android:orientation="vertical">


                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.dingzhu.junkd.mvp.ui.widget.XTextView
                        android:id="@+id/tv_manager_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="代理:XXX"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <com.dingzhu.junkd.mvp.ui.widget.XTextView
                        android:id="@+id/tv_manager_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="1358****334"
                        android:textColor="@color/text_jun_golden_number"
                        android:textSize="35sp" />
                </LinearLayout>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
            </LinearLayout>

        </LinearLayout>


        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/chargeback_records"
            style="@style/Item.Setting"
            android:clickable="true"
            android:text="扣款记录"
            android:textSize="@dimen/text_size_14sp" />
        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />
        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/submission_info"
            style="@style/Item.Setting"
            android:clickable="true"
            android:text="进件信息"
            android:textSize="@dimen/text_size_14sp" />
        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />

        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/customer_quota"
            style="@style/Item.Setting"
            android:clickable="true"
            android:text="客户额度"
            android:textSize="@dimen/text_size_14sp" />
        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />
        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/person_info"
            style="@style/Item.Setting"
            android:clickable="true"
            android:text="个人信息"
            android:textSize="@dimen/text_size_14sp" />
        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />
        <com.dingzhu.junkd.mvp.ui.widget.XTextView
            android:id="@+id/about_us"
            style="@style/Item.Setting"
            android:clickable="true"
            android:text="关于我们"
            android:textSize="@dimen/text_size_14sp" />
        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />

        <LinearLayout
            style="@style/Item"
            android:clickable="true"
            android:id="@+id/ll_version_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dingzhu.junkd.mvp.ui.widget.XTextView
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textColor="@color/black_light"
                android:drawableRight="@null"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:text="版本号"
                android:textSize="@dimen/text_size_14sp" />
            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <com.dingzhu.junkd.mvp.ui.widget.XTextView
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="v0.0"
                android:textSize="@dimen/text_size_14sp" />
            <android.support.v4.widget.Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/layout_margin_20dp" />

        <TextView
            android:id="@+id/btn_logout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="22dp"
            android:text="退出登录"
            android:background="@color/white"
            android:textSize="15sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/black_light"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>