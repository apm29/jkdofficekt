<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/btn_gradient_start"
                android:endColor="@color/btn_gradient_start"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_FF999999"/>
            <stroke android:width="1dip" android:color="@color/color_FF999999"/>
            <corners
                android:radius="4dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp"
                />
            <gradient
                android:angle="90"
                android:startColor="@color/btn_gradient_start"
                android:endColor="@color/btn_gradient_end"
                />
        </shape>
    </item>

</selector>
